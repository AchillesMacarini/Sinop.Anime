<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1d1f2d"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ConfiguracaoActivity"
    tools:showIn="@layout/app_bar_configuracao">

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="605dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:onClick="goToAccountSettins"
            android:text="Account"
            android:textColor="#ffffff"
            android:textSize="25dp"
            app:fontFamily="sans-serif-light" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:onClick="goToNotificationSettins"
            android:text="Notifications"
            android:textColor="#ffffff"
            android:textSize="25dp"
            app:fontFamily="sans-serif-light" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:onClick="buildAlertDialog"
            android:text="Theme"

            android:textColor="#ffffff"
            android:textSize="25dp"
            app:fontFamily="sans-serif-light" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:onClick="goToLanguagesSettins"
            android:text="Language"

            android:textColor="@android:color/background_light"
            android:textSize="25dp"
            app:fontFamily="sans-serif-light" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/background_light" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:onClick="goToHelp"
            android:text="Help"

            android:textColor="#ffffff"
            android:textSize="25dp"
            app:fontFamily="sans-serif-light" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>