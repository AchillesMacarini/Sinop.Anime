<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1d1f2d"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ConfiguracaoActivity"
    tools:showIn="@layout/app_bar_configuracao">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:onClick="goToAccountSettings"
            android:text="Account"
            android:textColor="#ffffff"
            android:textSize="25dp"
            app:fontFamily="sans-serif-light" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:onClick="goToNotificationSettings"
            android:text="Notifications"
            android:textColor="#ffffff"
            android:textSize="25dp"
            app:fontFamily="sans-serif-light" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:onClick="buildAlertDialog"
            android:text="Theme"
            android:textColor="#ffffff"
            android:textSize="25dp"
            app:fontFamily="sans-serif-light" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:onClick="goToLanguagesSettings"
            android:text="Language"
            android:textColor="@android:color/background_light"
            android:textSize="25dp"
            app:fontFamily="sans-serif-light" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/background_light" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:onClick="goToHelp"
            android:text="Help"

            android:textColor="#ffffff"
            android:textSize="25dp"
            app:fontFamily="sans-serif-light" />
    </LinearLayout>
</android.support.v7.widget.LinearLayoutCompat>